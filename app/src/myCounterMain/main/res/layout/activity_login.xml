<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/login_back"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/pic2"
    android:gravity="center"
    tools:context=".Login"
    >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/app_name"
        android:textSize="20sp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="50dp"
        android:alpha="0.4"
        android:background="@mipmap/ic_launcher_foreground" />

    <LinearLayout
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <EditText
            android:id="@+id/email_login"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:paddingLeft="2dp"
            android:background="#ffffff"
            android:hint="Email"
            android:drawableLeft="@android:drawable/ic_dialog_email"
            android:inputType="textEmailAddress|textNoSuggestions"/>

        <EditText
            android:id="@+id/pass_login"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="20dp"
            android:background="#ffffff"
            android:hint="password"
            android:drawableStart="@android:drawable/ic_lock_idle_lock"
            android:inputType="textPassword"/>
    </LinearLayout>

    <Button
        android:id="@+id/loginBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:drawableStart="@drawable/ic_login_iicon"
        android:background="#04ea00"
        android:textColor="#ffffff"
        android:text="@string/login"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30sp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="35dp"

            android:text="not_registered? "
            android:textColor="#ffffff" />


        <TextView
            android:id="@+id/textview_register"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:clickable="true"
            android:drawableLeft="@drawable/ic_reg_ico"
            android:focusable="true"
            android:onClick="gotoreg"
            android:text="register"
            android:textColor="#04ea00"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/forgot_pass"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:clickable="true"
            android:drawableLeft="@mipmap/ic_forgot_pass"
            android:text="ForgotPassword?"
            android:textColor="#04ea00"
            android:textStyle="bold" />


    </LinearLayout>
</LinearLayout>