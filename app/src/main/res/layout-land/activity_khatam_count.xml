<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_back"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/pic2"
    android:orientation="vertical"
    tools:context=".KhatamCount">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">


        <ImageButton
            android:layout_width="10dp"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"
            android:layout_weight="0.3"
            android:background="@mipmap/ic_back"
            android:gravity="left"
            android:onClick="go_main" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginHorizontal="40dp"
            android:layout_marginBottom="10dp"
            android:layout_weight="1"
            android:text="@string/group_count"
            android:textColor="@color/b"
            android:textSize="20dp" />

        <ImageButton
            android:id="@+id/light"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_weight="0.1"
            android:background="@mipmap/ic_night"
            android:gravity="right"
            android:onClick="lt"
            android:paddingRight="10dp" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <Button
            android:id="@+id/target"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawableLeft="@drawable/ic_tgt"
            android:gravity="left"
            android:onClick="target_method"
            android:paddingLeft="100dp"
            android:text="@string/target_string"
            android:textSize="20dp" />


    </LinearLayout>

    <TextView
        android:id="@+id/count_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:autoSizeMaxTextSize="70sp"
        android:autoSizeMinTextSize="12sp"
        android:autoSizeStepGranularity="2sp"
        android:autoSizeTextType="uniform"
        android:gravity="center"
        android:singleLine="true"
        android:text="@string/default_title"
        android:textColor="@color/b"
        android:textSize="35sp" />

    <EditText

        android:id="@+id/count_name_et"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:autoSizeMaxTextSize="70sp"
        android:autoSizeMinTextSize="12sp"
        android:autoSizeStepGranularity="2sp"
        android:autoSizeTextType="uniform"
        android:autofillHints="@string/default_title"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:gravity="left"
        android:maxLines="1"
        android:text="@string/default_title"
        android:textColor="@color/b"
        android:textSize="35sp"
        android:visibility="gone" />


    <EditText

        android:id="@+id/uput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:clickable="true"
        android:gravity="center"
        android:importantForAutofill="no"
        android:inputType="numberDecimal"
        android:maxLength="6"
        android:onClick="calc_open"
        android:text="0"
        android:textColor="@color/b"
        android:textSize="90sp"
        android:visibility="gone"
        tools:ignore="HardcodedText,LabelFor,OnClick" />

    <TextView
        android:id="@+id/txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5sp"
        android:gravity="center"
        android:maxLength="6"
        android:text="0"
        android:textColor="@color/b"
        android:textSize="90sp"
        tools:ignore="HardcodedText" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:weightSum="2">

        <Button
            android:id="@+id/edit_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:drawableLeft="@drawable/ic_edit"
            android:gravity="left"
            android:onClick="edits"
            android:paddingLeft="50pt"
            android:text="@string/edit"
            android:textSize="20dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <Button
            android:id="@+id/save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableLeft="@drawable/ic_save"
            android:gravity="left"
            android:onClick="saves"
            android:text="@string/save"
            android:textSize="20dp" />

        <Button
            android:id="@+id/open"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableLeft="@drawable/ic_list"
            android:gravity="left"
            android:paddingLeft="20pt"
            android:text="@string/open"
            android:textSize="20dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical">

        <Button
            android:id="@+id/count"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:drawableLeft="@mipmap/ic_count"
            android:gravity="left"
            android:onClick="play"
            android:paddingLeft="30dp"
            android:text="@string/count"
            android:textColor="@color/b"
            android:textSize="60dp" />
    </LinearLayout>


</LinearLayout>